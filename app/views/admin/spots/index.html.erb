<!--登録済み観光地を一覧表示-->
<table class="table">

  <tr>
    <th>風景</th>
    <th>地名</th>
    <th>緯度</th>
    <th>経度</th>
    <th>タグ</th>
  </tr>
  <% @spots.each do |spot| %>
  <tr>
    <td><%= attachment_image_tag spot, :image, class: "image-small", fallback: "no_image.png" %> </td>
    <td>
      <%= link_to edit_admin_spot_path(spot.id) do %>
        <%= spot.spot_name %>
      <% end %>
    </td>
    <td><%= spot.latitude %></td>
    <td><%= spot.longitude %></td>
    <td><%= spot.tag_list %></td>
  </tr>
  <% end %>

</table>
<!--/登録済み観光地を一覧表示-->

<!--地図表示-->
<h2>gmap</h2>
<div id='map'></div>

<style>
#map{
  height: 400px;
}
</style>

<script>
function initMap(){
  let map = new google.maps.Map(document.getElementById('map'), {
  center: {lat: 43.068661, lng: 141.350755},
  zoom: 8
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['API_KEY']%>&callback=initMap" async defer></script>
<!--/地図表示-->